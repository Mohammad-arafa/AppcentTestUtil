<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/appcent_logo"/>

    <TextView
        android:id="@+id/tvVersion"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="0.0.0"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textColor="@color/dark_electric_blue"
        android:textSize="18sp"/>

    <LinearLayout
        android:id="@+id/llTestURL"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/french_grey"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Test Environment"
            android:layout_margin="15dp"
            android:gravity="center"
            android:textColor="@color/dodger_blue"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llProdURL"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/french_grey"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Prod Environment"
            android:layout_margin="15dp"
            android:gravity="center"
            android:textColor="@color/dodger_blue"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llDoneTasks"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/french_grey"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Done Tasks"
            android:layout_margin="15dp"
            android:gravity="center"
            android:textColor="@color/dodger_blue"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/french_grey"/>
        <TextView
            android:id="@+id/tvBaseUrl"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Base URL :"
            android:layout_margin="15dp"
            android:gravity="center"
            android:textColor="@color/dark_electric_blue"
            android:textSize="18sp"/>
    </LinearLayout>

</LinearLayout>